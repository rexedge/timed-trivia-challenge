generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type             String
  provider         String
  providerAccountId String
  refresh_token    String? @db.Text
  access_token     String? @db.Text
  expires_at       Int?
  token_type       String?
  scope            String?
  id_token         String? @db.Text
  session_state    String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String     @id @default(cuid())
  name          String?
  email         String?    @unique
  emailVerified DateTime?
  image         String?
  phoneNumber   String?
  profession    String?
  dateOfBirth   DateTime?
  sex           Sex?
  role          UserRole   @default(PLAYER)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  accounts      Account[]
  sessions      Session[]
  responses     Response[]
  sentMessages     ChatMessage[] @relation("SentMessages")
  receivedMessages ChatMessage[] @relation("ReceivedMessages")
  sentChallenges   Challenge[] @relation("SentChallenges")
  receivedChallenges Challenge[] @relation("ReceivedChallenges")
  dailyChallengeParticipations DailyChallengeParticipation[]
  weeklyChallengeParticipations WeeklyChallengeParticipation[]
}

model Question {
  id            String         @id @default(cuid())
  text          String
  options       String         // JSON array of options
  correctAnswer String
  category      Category       @default(GENERAL_KNOWLEDGE)
  difficulty    Difficulty     @default(MEDIUM)
  source        QuestionSource @default(MANUAL)
  aiMetadata    String?        // JSON metadata for AI-generated questions
  gameQuestions GameQuestion[]
  responses     Response[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model Game {
  id            String         @id @default(cuid())
  startTime     DateTime
  endTime       DateTime
  status        GameStatus     @default(SCHEDULED)
  gameType      GameType       @default(PUBLIC)
  category      Category?      // Optional category filter
  difficulty    Difficulty?    // Optional difficulty filter
  answerTime    Int           @default(300) // Default 5 minutes in seconds
  resultTime    Int           @default(300) // Default 5 minutes in seconds
  intervalTime  Int           @default(300) // Default 5 minutes in seconds
  gameQuestions GameQuestion[]
  responses     Response[]
  messages ChatMessage[]
  challenges    Challenge[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model GameQuestion {
  id          String    @id @default(cuid())
  gameId      String
  questionId  String
  displayTime DateTime  // When this question should be displayed
  duration    Int       @default(300) // Duration in seconds (5 minutes)
  game       Game      @relation(fields: [gameId], references: [id], onDelete: Cascade)
  question   Question  @relation(fields: [questionId], references: [id])
  responses  Response[]
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@unique([gameId, questionId])
}

model Response {
  id             String       @id @default(cuid())
  gameId         String
  questionId     String
  userId         String
  gameQuestionId String
  timeToAnswer  Float    // Time in seconds
  answer         String
  score          Float       // Base score + speed bonus
  answeredAt     DateTime    @default(now())
  game          Game        @relation(fields: [gameId], references: [id], onDelete: Cascade)
  question      Question    @relation(fields: [questionId], references: [id])
  user          User        @relation(fields: [userId], references: [id])
  gameQuestion  GameQuestion @relation(fields: [gameQuestionId], references: [id])
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@unique([gameId, questionId, userId])
}

model GameSettings {
  id               String   @id @default(cuid())
  gameStartTime    String   // Daily start time (HH:mm)
  gameEndTime      String   // Daily end time (HH:mm)
  questionInterval Int      @default(900) // 15 minutes in seconds
  questionDuration Int      @default(300) // 5 minutes in seconds
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model ChatMessage {
  id          String    @id @default(cuid())
  content     String
  senderId    String
  senderName  String
  senderImage String?
  recipientId String?   // For private messages
  gameId      String?   // For game-specific chats
  createdAt   DateTime  @default(now())
  sender      User      @relation("SentMessages", fields: [senderId], references: [id])
  recipient   User?     @relation("ReceivedMessages", fields: [recipientId], references: [id])
  game        Game?     @relation(fields: [gameId], references: [id])

  @@index([senderId])
  @@index([recipientId])
  @@index([gameId])
}

enum UserRole {
  ADMIN
  PLAYER
}

enum GameStatus {
  SCHEDULED
  ACTIVE
  COMPLETED
  CANCELLED
}

enum GameType {
  PUBLIC
  ONE_ON_ONE
  DAILY
  WEEKLY
}

enum Category {
  GENERAL_KNOWLEDGE
  SCIENCE
  HISTORY
  GEOGRAPHY
  SPORTS
  ENTERTAINMENT
  TECHNOLOGY
  ARTS_LITERATURE
  CURRENT_EVENTS
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
  EXPERT
}

enum QuestionSource {
  MANUAL
  AI_GENERATED
  IMPORTED
}

enum Sex {
  MALE
  FEMALE
  OTHER
  PREFER_NOT_TO_SAY
}

enum ChallengeStatus {
  PENDING
  ACCEPTED
  DECLINED
  COMPLETED
  EXPIRED
}

model Challenge {
  id           String          @id @default(cuid())
  challengerId String
  opponentId   String
  gameId       String?         @unique
  status       ChallengeStatus @default(PENDING)
  category     Category?
  difficulty   Difficulty?
  questionCount Int            @default(5)
  timeLimit    Int             @default(300) // seconds per question
  expiresAt    DateTime
  completedAt  DateTime?
  challenger   User            @relation("SentChallenges", fields: [challengerId], references: [id])
  opponent     User            @relation("ReceivedChallenges", fields: [opponentId], references: [id])
  game         Game?           @relation(fields: [gameId], references: [id])
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt

  @@index([challengerId])
  @@index([opponentId])
  @@index([status])
}

model DailyChallenge {
  id             String                        @id @default(cuid())
  date           DateTime                      @db.Date
  category       Category
  difficulty     Difficulty
  questionCount  Int                           @default(10)
  timeLimit      Int                           @default(300)
  participations DailyChallengeParticipation[]
  createdAt      DateTime                      @default(now())
  updatedAt      DateTime                      @updatedAt

  @@unique([date])
  @@index([date])
}

model DailyChallengeParticipation {
  id               String         @id @default(cuid())
  userId           String
  dailyChallengeId String
  score            Float
  completedAt      DateTime       @default(now())
  user             User           @relation(fields: [userId], references: [id])
  dailyChallenge   DailyChallenge @relation(fields: [dailyChallengeId], references: [id])
  createdAt        DateTime       @default(now())

  @@unique([userId, dailyChallengeId])
  @@index([dailyChallengeId, score])
}

model WeeklyChallenge {
  id             String                         @id @default(cuid())
  weekStart      DateTime                       @db.Date
  weekEnd        DateTime                       @db.Date
  category       Category
  difficulty     Difficulty
  questionCount  Int                            @default(20)
  timeLimit      Int                            @default(300)
  participations WeeklyChallengeParticipation[]
  createdAt      DateTime                       @default(now())
  updatedAt      DateTime                       @updatedAt

  @@unique([weekStart])
  @@index([weekStart])
}

model WeeklyChallengeParticipation {
  id                String          @id @default(cuid())
  userId            String
  weeklyChallengeId String
  score             Float
  completedAt       DateTime        @default(now())
  user              User            @relation(fields: [userId], references: [id])
  weeklyChallenge   WeeklyChallenge @relation(fields: [weeklyChallengeId], references: [id])
  createdAt         DateTime        @default(now())

  @@unique([userId, weeklyChallengeId])
  @@index([weeklyChallengeId, score])
}